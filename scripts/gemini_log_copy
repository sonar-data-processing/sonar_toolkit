total_file_size=0
for path in "${path_array[@]}" 
do    
    origin=${path}
    dest="/media/gustavoneves/GUSTAVO1/sonar_toolkit/dataset/testday_20161128_20161207"
    filter="*gemini*log" 

    files=$(find $origin -iname $filter)
    total=$(echo "$files" | wc -l)
    num=1
    for f in $files
    do
        file_size_readable=$(ls -lh $f | awk '{print $5}')
        file_size=$(ls -l $f | awk '{print $5}')
        ((total_file_size=total_file_size+file_size))
        filename="$(basename ${origin})_$(basename ${f})"
        echo "source: $f"
        echo "dest: $dest/$filename"
        echo "size: $file_size_readable"
        echo "copying $num of $total ..."
        ((num+=1))
        cp "$f" "$dest/$filename"
    done
done 

((total_file_size=total_file_size/(1024*1024*1024)))
echo "${total_file_size}G"
